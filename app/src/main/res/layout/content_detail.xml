<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.sch.smktelkom_mlg.project.xirpl406152433.part1.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Deskripsi"
            android:textColor="@color/album_title" />

        <TextView
            android:id="@+id/jamu_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="deskripsi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Bahan"
            android:textColor="@color/album_title" />

        <TextView
            android:id="@+id/jamu_bahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bahan yang dibutuhkan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Cara pembuatan"
            android:textColor="@color/album_title" />

        <TextView
            android:id="@+id/jamu_cara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cara Pembuatan" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
